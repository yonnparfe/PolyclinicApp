<Page x:Class="PolyclinicApp.PatientMedCardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PolyclinicApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PatientMedCardPage">

    <TabControl x:Name="MedCardTabControl">
        <TabItem Header="Главная страница">
            <StackPanel>
                <TextBlock Text="Номер карты:" />
                <TextBlock Text="{Binding Number_Med_Card}" />
                <TextBlock Text="Участок:" />
                <TextBlock Text="{Binding Number_Med_District}" />
                <TextBlock Text="ФИО:" />
                <TextBlock>
                    <TextBlock.Text>
                        <MultiBinding StringFormat="{}{0} {1} {2}">
                            <Binding Path="Last_Name" />
                            <Binding Path="First_Name" />
                            <Binding Path="Patronymic" />
                        </MultiBinding>
                    </TextBlock.Text>
                </TextBlock>

                <TextBlock Text="Дата рождения:" />
                <TextBlock Text="{Binding Date_Birth}" />
                <TextBlock Text="Пол:" />
                <TextBlock Text="{Binding Gender}" />
                <TextBlock Text="Мобильный телефон:" />
                <TextBlock Text="{Binding Mobile_Phone}" />
            </StackPanel>
        </TabItem>

        <TabItem Header="Место жительства">
            <StackPanel>
                <TextBlock Text="Улица:" />
                <TextBlock Text="{Binding Street}" />
                <TextBlock Text="Дом:" />
                <TextBlock Text="{Binding House}" />
                <TextBlock Text="Подъезд:" />
                <TextBlock Text="{Binding Entrance}" />
                <TextBlock Text="Квартира:" />
                <TextBlock Text="{Binding Flat}" />
                <TextBlock Text="Домашний телефон:" />
                <TextBlock Text="{Binding Home_Phone_Number}" />
            </StackPanel>
        </TabItem>

        <TabItem Header="Место работы">
            <StackPanel>
                <TextBlock Text="Место работы:" />
                <TextBlock Text="{Binding Place_Work}" />
                <TextBlock Text="Адрес работы:" />
                <TextBlock Text="{Binding Work_Address}" />
                <TextBlock Text="Позиция:" />
                <TextBlock Text="{Binding Position}" />
                <TextBlock Text="Рабочий телефон:" />
                <TextBlock Text="{Binding Work_Phone}" />
            </StackPanel>
        </TabItem>

        <TabItem Header="Дополнительно">
            <StackPanel>
                <TextBlock Text="Примечания:" />
                <TextBlock Text="{Binding Note}" />
            </StackPanel>
        </TabItem>
        <TabItem Header="Редактировать">
            <ScrollViewer Margin="20">
                <StackPanel>
                    <TextBlock Text="Данные пациента" FontSize="20" FontWeight="Bold" Margin="10,0,10,20"/>

                    <TextBlock Text="Имя" Margin="10,0,10,0"/>
                    <TextBox x:Name="FirstName" Margin="10"/>

                    <TextBlock Text="Фамилия" Margin="10,0,10,0"/>
                    <TextBox x:Name="LastName" Margin="10"/>

                    <TextBlock Text="Отчество" Margin="10,0,10,0"/>
                    <TextBox x:Name="MiddleName" Margin="10"/>

                    <TextBlock Text="Дата рождения" Margin="10,0,10,0"/>
                    <DatePicker x:Name="BirthDate" Margin="10"/>

                    <TextBlock Text="Пол" Margin="10,0,10,0"/>
                    <ComboBox x:Name="Gender" Margin="10">
                        <ComboBoxItem Content="Мужской"/>
                        <ComboBoxItem Content="Женский"/>
                    </ComboBox>

                    <TextBlock Text="Улица" Margin="10,0,10,0"/>
                    <TextBox x:Name="Street" Margin="10"/>

                    <TextBlock Text="Дом" Margin="10,0,10,0"/>
                    <TextBox x:Name="HouseNumber" Margin="10"/>

                    <TextBlock Text="Подъезд" Margin="10,0,10,0"/>
                    <TextBox x:Name="Entrance" Margin="10"/>

                    <TextBlock Text="Квартира" Margin="10,0,10,0"/>
                    <TextBox x:Name="Apartment" Margin="10"/>

                    <TextBlock Text="Домашний телефон" Margin="10,0,10,0"/>
                    <TextBox x:Name="HomePhone" Margin="10"/>

                    <TextBlock Text="Мобильный телефон" Margin="10,0,10,0"/>
                    <TextBox x:Name="MobilePhone" Margin="10"/>

                    <TextBlock Text="Рабочий телефон" Margin="10,0,10,0"/>
                    <TextBox x:Name="WorkPhone" Margin="10"/>

                    <TextBlock Text="Место работы" Margin="10,0,10,0"/>
                    <TextBox x:Name="WorkPlace" Margin="10"/>

                    <TextBlock Text="Адрес работы" Margin="10,0,10,0"/>
                    <TextBox x:Name="WorkAddress" Margin="10"/>

                    <TextBlock Text="Позиция на работе" Margin="10,0,10,0"/>
                    <TextBox x:Name="Position" Margin="10"/>

                    <TextBlock Text="Заметки" Margin="10,0,10,0"/>
                    <TextBox x:Name="Notes" Margin="10" Height="60" TextWrapping="Wrap" AcceptsReturn="True"/>

                    <Button Content="Сохранить изменения" Click="SaveChangesPatient_Click" Margin="10,20,10,0"/>
                </StackPanel>
            </ScrollViewer>
        </TabItem>

        <TabItem Header="Удалить">
            <StackPanel>
                <TextBlock Text="Удалить пациента?" />
                <StackPanel Orientation="Horizontal">
                    <Button Height="30" Width="120" Click="DeleteCard_Click">Удалить</Button>
                </StackPanel>
            </StackPanel>
        </TabItem>
    </TabControl>


</Page>
