<Page x:Class="PolyclinicApp.RegPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PolyclinicApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Регистрация">

    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Логин" Margin="10,0,10,0"  />
            <TextBox x:Name="Username" Margin="10"/>
            <TextBlock Text="Пароль" Margin="10,0,10,0"  />
            <PasswordBox x:Name="Password" Margin="10"/>
            <TextBlock Text="Роль" Margin="10,0,10,0"  />
            <ComboBox x:Name="UserRole" Margin="10">
                <ComboBoxItem Content="Администратор"/>
                <ComboBoxItem Content="Врач"/>
                <ComboBoxItem Content="Регистратор"/>
            </ComboBox>

            <Button Content="Войти" Click="Login_Click" Margin="10"/>
        </StackPanel>
    </Grid>


</Page>
