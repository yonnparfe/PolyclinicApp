<Page x:Class="PolyclinicApp.SchedulePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PolyclinicApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SchedulePage">

    <Grid>
        <DataGrid AutoGenerateColumns="False" Name="DoctorScheduleDataGrid" >
            <DataGrid.Columns>
                <DataGridTextColumn Header="Участок" Binding="{Binding Number_Med_District}" />
                <DataGridTextColumn Header="Доктор" Binding="{Binding Doctors.Last_Name}" />
                <DataGridTextColumn Header="Специализация" Binding="{Binding Doctors.Specializations.Name_Specialization}" />
                <DataGridTextColumn Header="Понедельник" Binding="{Binding Monday}" />
                <DataGridTextColumn Header="Вторник" Binding="{Binding Tuesday}" />
                <DataGridTextColumn Header="Среда" Binding="{Binding Wednesday}" />
                <DataGridTextColumn Header="Четверг" Binding="{Binding Thursday}" />
                <DataGridTextColumn Header="Пятница" Binding="{Binding Friday}" />
                <DataGridTextColumn Header="Кабинет" Binding="{Binding Room_Number}" />
                <!--<DataGridTemplateColumn>
                    <DataGridTemplateColumn.Header>Редактировать</DataGridTemplateColumn.Header>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Height="30" Width="150" Click="EditClick">Редактировать</Button>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>-->
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
