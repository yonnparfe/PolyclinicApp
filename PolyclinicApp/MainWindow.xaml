<Window x:Class="PolyclinicApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PolyclinicApp"
        mc:Ignorable="d"
        Title="Главное окно" Height="600" Width="800">

    <Window.Resources>
        <SolidColorBrush x:Key="ButtonBackgroundColor" Color="#49678D"/>
        <SolidColorBrush x:Key="ButtonForegroundColor" Color="White"/>



        <Style TargetType="Button">
            <Setter Property="Background" Value="{StaticResource ButtonBackgroundColor}"/>
            <Setter Property="Foreground" Value="{StaticResource ButtonForegroundColor}"/>
            <Setter Property="FontFamily" Value="Segoe UI; Arial; sans-serif"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Margin" Value="0,10"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Opacity" Value="0.7"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border CornerRadius="10" Background="White" Margin="20">
            <StackPanel Grid.Column="0" Background="#FFFAFA" Margin="10">
                <Button  Click="btnRegisterPatientsClick">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                    <Border>
                        <ContentPresenter Content="Регистрация пациентов" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </Button>

                <Button  Click="btnMedicalCardsClick">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                    <Border>
                        <ContentPresenter Content="Медицинские карты" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </Button>

                <Button  Click="btnAppointmentClick">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                    <Border>
                        <ContentPresenter Content="Запись на прием" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </Button>

                <Button  Click="btnSchedulesClick">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                    <Border>
                        <ContentPresenter Content="Расписания" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </Button>

                <!--<Button  Click="btnTestsClick">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                    <Border>
                        <ContentPresenter Content="Анализы" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </Button>-->

                <!--<Button  Click="btnSettingsClick">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                    
                    <Border>
                        <ContentPresenter Content="Настройки" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    
                </Button>-->
            </StackPanel>
        </Border>

        <Grid Grid.Column="1">
            <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" Background="#FFFFFF"/>
        </Grid>
    </Grid>








</Window>
