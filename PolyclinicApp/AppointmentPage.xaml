<Page x:Class="PolyclinicApp.AppointmentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PolyclinicApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AppointmentPage">

    <Grid Margin="20">
        <StackPanel x:Name="AppointmentStackPanel">
            <TextBlock Text="Запись на прием к врачу" FontWeight="Bold" FontSize="20" Margin="0,0,0,20" HorizontalAlignment="Center" />

            <TextBlock Text="Доктор:" />
            <ComboBox Name="DoctorComboBox" Margin="0,0,0,10"/>
            
            <TextBlock Text="Пациент:" />
            <ComboBox Name="PatientComboBox" Margin="0,0,0,10"/>

            <TextBlock Text="Кабинет:" />
            <TextBox Name="Room" Margin="0,0,0,10" />

            <TextBlock Text="Дата приема:" />
            <DatePicker Name="AppointmentDate" Margin="0,0,0,10" />

            <TextBlock Text="Время приема:" />
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <ComboBox Name="HourComboBox" Width="70">
                    <ComboBoxItem Content="09" />
                    <ComboBoxItem Content="10" />
                    <ComboBoxItem Content="11" />
                    <ComboBoxItem Content="12" />
                    <ComboBoxItem Content="13" />
                    <ComboBoxItem Content="14" />
                    <ComboBoxItem Content="15" />
                    <ComboBoxItem Content="16" />
                    <ComboBoxItem Content="17" />
                    <ComboBoxItem Content="18" />
                    <ComboBoxItem Content="19" />
                    <ComboBoxItem Content="20" />
                </ComboBox>
                <TextBlock Text=":" Margin="5,0" />
                <ComboBox Name="MinuteComboBox" Width="70">
                    <ComboBoxItem Content="00" />
                    <ComboBoxItem Content="15" />
                    <ComboBoxItem Content="30" />
                    <ComboBoxItem Content="45" />
                </ComboBox>
            </StackPanel>



            <Button Content="Записаться" Click="SubmitAppointment_Click" Margin="0,10,0,0" />
            <Button Content="История" Click="History_Click" Margin="0,10,0,0" />
        </StackPanel>
    </Grid>
</Page>
